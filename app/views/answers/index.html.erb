<%- model_class = Answer -%>

<div class="page-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<% @answers.each do |answer| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%=  answer.question.question %></h3>
      </div>
      <div class="panel-body">
        <%= answer.answer.html_safe %>
        <div class="btn-group-vertical pull-right">
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      question_answer_path(@question, answer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_question_answer_path(@question, answer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      question_answer_path(@question, answer),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-xs btn-danger' %>
        </div>
      </div>
    </div>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_question_answer_path(@question),
            :class => 'btn btn-primary' %>
