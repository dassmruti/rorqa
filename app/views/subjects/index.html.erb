<%- model_class = Subject -%>
<div class="custom-header">
  <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="row">
  <div class="well col-sm-10">
    <% @subjects.each do |subject| %>
        <div class="row user-row">
          <div class="col-sm-1">
            <img class="img-circle"
                 src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=50"
                 alt="User Pic">
          </div>
          <div class="col-sm-10">
            <strong><%= subject.name.upcase %></strong><br>
            <span class="text-muted">Subject level: <%= subject.id %></span>
          </div>
          <div class="col-sm-1 dropdown-user" data-for=".<%= subject.name.gsub(" ", "_") %>">
            <i class="glyphicon glyphicon-chevron-down text-muted"></i>
          </div>
        </div>
        <div class="row user-infos <%= subject.name.gsub(" ", "_") %>">
          <div class="col-sm-10 offset1">
            <div class="panel panel-primary">
              <div class="panel-heading">
                <h3 class="panel-title">Subject information</h3>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-sm-3">
                    <img class="img-circle"
                         src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100"
                         alt="User Pic">
                  </div>
                  <div class="col-sm-6">
                    <strong><%= subject.name.upcase %></strong><br>
                    <table class="table table-condensed table-responsive table-user-information">
                      <tbody>
                      <tr>
                        <td>Total Questions:</td>
                        <td><%= subject.questions_count %></td>
                      </tr>
                      <tr>
                        <td>Registered since:</td>
                        <td><%= l subject.created_at %></td>
                      </tr>
                      <tr>
                        <td>Tags</td>
                        <td>N/A</td>
                      </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
              <div class="panel-footer">
                <div class="row">
             <span class="pull-right">
               <%= link_to t('.show', :default => t("helpers.links.show")),
                           subject_path(subject), :class => 'btn btn-primary' %>
               <%= link_to t('.edit', :default => t("helpers.links.edit")),
                           edit_subject_path(subject), :class => 'btn btn-warning' %>
               <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                           subject_path(subject),
                           :method => :delete,
                           :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                           :class => 'btn btn-danger' %>

               <!--<button class="btn btn-warning" type="button"-->
               <!--data-toggle="tooltip"-->
               <!--data-original-title="Edit this user"><i class="glyphicon glyphicon-edit glyphicon glyphicon-white"></i></button>-->
               <!--<button class="btn btn-danger" type="button"-->
               <!--data-toggle="tooltip"-->
               <!--data-original-title="Remove this user"><i class="glyphicon glyphicon-remove glyphicon glyphicon-white"></i></button>-->
                        </span>
                </div>

              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
  <div class="col-sm-2">
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_subject_path,
                :class => 'btn btn-primary pull-right' %>
  </div>
</div>


